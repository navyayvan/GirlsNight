<!DOCTYPE html>
<html>
  <head>
  <!-- Latest compiled and minified CSS & JS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
</head>
<body>
    <div class="navbar navbar-default">
    <nav>
    <ul class="nav nav-tabs nav-justified">
    <li><a href='/' class='navbar-btn btn btn-success'> Home</a></li>
    <li> <a href="/search" class="navbar-btn btn btn-success">Search for Shows!</a></li>
    <% if (currentUser) { %>
    <li> <a href='/profile' class='btn btn-success'>Profile</a></li>
    <li> <a href="/auth/logout" class="btn btn-primary">Logout</a><li>
    <% } else { %>
   <li> <a href="/auth/signup" class="navbar-btn btn btn-primary">Signup</a><li>
     <li> <a href="/auth/login" class="navbar-btn btn btn-primary">Login</a></li>
    <% } %>
  </ul>
</nav>
</div>

<% if (typeof alerts !== 'undefined') { %>
      <% for (key in alerts) { %>
        <% alerts[key].forEach(function(thisMsg) { %>
          <div class="alert alert-<%= key %>"><%= thisMsg %></div>
        <% }); %>
      <% } %>
    <% } %>
   
   <%- body %>

     <script src="//code.jquery.com/jquery.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
  </body>
</html>